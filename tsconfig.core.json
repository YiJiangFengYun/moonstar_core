{
    "compilerOptions": {
        "lib": ["es2018", "dom"],
        "outDir": "./build/core/",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "target": "es5"
    },
    "include": [
        "./core/**/*"
    ]
}